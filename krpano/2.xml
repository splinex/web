<krpano>

    <!--    <include url="skin/videointerfacehls.xml" />-->
    <plugin name="video"
            url.flash="plugins/videoplayer.swf"
            url.html5="plugins/videoplayer.js"
            videourl.no-ios.and.no-desktop="%SWFPATH%/m3u8/1.mp4"
            videourl.ios="%SWFPATH%/m3u8/1_hq.m3u8"
            videourl.desktop="%SWFPATH%/m3u8/1.mp4"
            posterurl.desktop="%SWFPATH%/m3u8/1_hq.m3u8.jpg"
            posterurl.ios="%SWFPATH%/m3u8/1_hq.m3u8.jpg"
            posterurl.no-ios.and.no-desktop="%SWFPATH%/m3u8/1_hq.m3u8.jpg"
            buffertime="0.1"
            pausedonstart="false"
            loop="false"
            enabled="false"
            zorder="0"
            align="center"
            ox="0" oy="0"
            width.no-panovideosupport="100%"
            height.no-panovideosupport="prop"
            onvideoready=""
            onvideoplay=""
            onvideopaused=""
            onvideocomplete="loadnextvideo();"
            onloaded="loadnextvideo();"
            />
    <autorotate enabled="true"/>

    <action name="loadnextvideo">
        trace(get(plugin[video].s_next));
        playvideo(get(s_next));
    </action>

    <view hlookat="0" vlookat="0" fovtype="DFOV" fov="130" fovmin="75" fovmax="150" fisheye="0.35" />
    <image devices="panovideosupport">
        <sphere url="plugin:video" />
    </image>

</krpano>
