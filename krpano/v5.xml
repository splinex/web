<krpano>

    <include url="skin/videointerfacehls.xml" />
    <plugin name="video"
            url.flash="plugins/videoplayer.swf"
            url.html5="plugins/videoplayer.js"
            videourl.no-ios.and.no-desktop="%SWFPATH%/m3u8/5.mp4"
            videourl.ios="%SWFPATH%/1_hq.m3u8"
            videourl.desktop="%SWFPATH%/m3u8/5.mp4"
            buffertime="0.3"
            pausedonstart="true"
            loop="false"
            enabled="false"
            zorder="0"
            align="center"
            ox="0" oy="0"
            width.no-panovideosupport="100%"
            height.no-panovideosupport="prop"
            onvideoready="videointerface_videoready();"
            onvideoplay=""
            onvideopaused=""
            onvideocomplete="loadpano('%SWFPATH%/v1.xml', NULL, KEEPALL);"
            onloaded="videointerface_setup_interface(video);"
            />


    <view hlookat="0" vlookat="0" fovtype="DFOV" fov="130" fovmin="75" fovmax="150" fisheye="0.35" />
    <image devices="panovideosupport">
        <sphere url="plugin:video" />
    </image>

</krpano>
